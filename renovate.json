{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeBranch",
    ":automergeDigest",
    ":automergeMinor",
    ":automergePatch",
    ":disableDependencyDashboard",
    ":enablePreCommit"
  ],
  "commitMessageAction": "Renovate:",
  "commitMessageExtra": "{{replace 'to' '@' commitMessageExtra}}",
  "commitMessageTopic": "{{depName}}"
}
